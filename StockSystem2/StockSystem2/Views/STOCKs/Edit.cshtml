@model StockSystem2.Models.STOCK

@{
    ViewBag.Title = "Edit";
}

<h2>在庫数入力</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h5>商品の在庫数を入力して下さい。</h5>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.NAME)
    @Html.HiddenFor(model => model.PRICE)
    @Html.HiddenFor(model => model.SUBTOTAL)
    @Html.HiddenFor(model => model.UPDATEHISTORY)





    <div class="form-group">
        @Html.LabelFor(model => model.QUONTITY, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.QUONTITY, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.QUONTITY, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
